grammar Gisele::Language::Grammar

  rule event
    task_start_or_end | event_name
  end

  rule task_start_or_end
    task_name ':' ('start' | 'end')
  end

  ### Names
  
  rule task_name
    [A-Z] [A-Za-z0-9_]*
  end

  rule variable_name
    [a-z] [A-Za-z0-9_]*
  end

  rule event_name
    [a-z] [a-z0-9_]*
  end

  ### Literals

  rule boolean_literal
    'true' | 'false'
  end

  ### Spacing

  rule spaces
    [ \t\n]+
  end

  rule spacing
    [ \t\n]*
  end

end